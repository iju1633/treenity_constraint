<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Basics">

        <EditTextPreference
            app:key="signature"
            app:title="Your Signature"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Advanced">

        <SwitchPreference
            android:defaultValue="false"
            android:summary="Click to Switch On or Off"
            android:title="Push Alarm"
            app:key="switch" />

        <SwitchPreference
            android:defaultValue="false"
            android:summary="Swipe to confirm your permission"
            android:title="Activity Check"
            app:key="permission"/>

    </PreferenceCategory>

</PreferenceScreen>